<!DOCTYPE html>
<html lang="en">
    <head>

        <title>Home Page</title>
        <link rel="stylesheet" href="/css/style.css" type="text/css" />
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
        <link rel="stylesheet" href="/remix/remixicon.css" type="text/css" />
    </head>
    <body>
        <header class="navbar navbar-expand-lg px-5 py-3 w-100">
            <div>
                <a href="logo" class="nav-link fs-4">My Page</a>
            </div>
            <nav class="navbar-collapse collapse">
                <ul class="navbar-nav ms-auto">
                    <li><a class="nav-link fs-5 mx-4" href="#">Home</a></li>
                    <li><a class="nav-link fs-5 mx-4" href="#">View</a></li>
                    <li><a class="nav-link fs-5 mx-4" href="#">Update</a></li>
                </ul>
            </nav>
        </header>

        <div class="container">
            <h1>Product Review</h1>
            <div class="rating-container">
                <form method="post" action="/insertData">
                    <p>How Would you rate this Product?</p>
                    <div class="rating">
                        <!-- Radio buttons for rating -->
                        <label><input type="radio" name="rating" value="1">
                            1</label>
                        <label><input type="radio" name="rating" value="2">
                            2</label>
                        <label><input type="radio" name="rating" value="3">
                            3</label>
                        <label><input type="radio" name="rating" value="4">
                            4</label>
                        <label><input type="radio" name="rating" value="5">
                            5</label>
                        <label><input type="radio" name="rating" value="6">
                            6</label>
                        <label><input type="radio" name="rating" value="7">
                            7</label>
                        <label><input type="radio" name="rating" value="8">
                            8</label>
                        <label><input type="radio" name="rating" value="9">
                            9</label>
                        <label><input type="radio" name="rating" value="10">
                            10</label>
                    </div>
                    <textarea name="review" rows="4"
                        placeholder="Write a review"></textarea>
                    <button type="submit">Send</button>
                </form>
            </div>
        </div>

        <!-- VIEW DATA -->

        <div>
            <h1>All Reviews</h1>
            <!-- Display all reviews -->
            <div class="view_rating" >
                <% RateData.map((v, i) => { %>
                <div class="reviews ">
                    <div class="d-flex align-items-center justify-content-between">
                        <p>Rate : <%= v.rating %></p>
                        <div class="icons d-flex ">
                            <a href="/updateData/?id=<%= v.id %>" class="nav-link mx-2"><i class="ri-edit-box-fill"></i></a>
                            <a href="/deleteData/?id=<%= v.id %>" class="nav-link mx-2"><i class="ri-delete-bin-5-fill"></i></a>
                        </div>
                    </div>
                    <div class="rating">
                        <% for (let j = 1; j <= v.rating; j++) { %>
                            <i class="ri-star-fill"></i>
                        <% } %>
                    </div>
                    <p><%= v.review %></p>
                </div>
                <% }) %>
            </div>
        </div>

        <script src="/js/bootstrap.bundle.min.js"
            type="text/javascript"></script>
        <script src="/js/script.js" type="text/javascript"></script>
    </body>
</html>
