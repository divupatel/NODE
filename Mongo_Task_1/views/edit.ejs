<!DOCTYPE html>
<html lang="en">
    <head>

        <title>Edit Page</title>
        <link rel="stylesheet" href="/css/style.css" type="text/css" />
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
        <link rel="stylesheet" href="/remix/remixicon.css" type="text/css" />
    </head>
    <body>
        <header class="navbar navbar-expand-lg px-5 py-3 text-light w-100">
            <div>
                <a href="logo" class="nav-link fs-4">My Page</a>
            </div>
            <nav class="navbar-collapse collapse">
                <ul class="navbar-nav m-auto ">
                    <li><a class="nav-link text-light fs-5 mx-4"
                            href>Home</a></li>
                    <li><a class="nav-link text-light fs-5 mx-4"
                            href>View</a></li>
                    <li><a class="nav-link text-light fs-5 mx-4"
                            href>Update</a></li>
                </ul>
            </nav>
            <a href="Javascript:void(0)" class="nav-link" id="sidebar"><i
                    class="ri-add-box-fill"></i></a>
        </header>

        <h2 style="text-align: center; color: #a29cc8; margin: 20px;">Edit
            Data</h2>
        <form action="/updateData" method="post"
            style="width: 50%; margin: auto;">
            <input type="hidden" name="userID" value="<%= singleObj.id %>">
            <table border="1" align="center">
                <tr>
                    <td>First Name:</td>
                    <td><input type="text" name="f_name"
                            value="<%= singleObj.f_name%>"></td>
                </tr>
                <tr>
                    <td>Last Name:</td>
                    <td><input type="text" name="l_name"
                            value="<%= singleObj.l_name%>"></td>
                </tr>
                <tr>
                    <td>Email :</td>
                    <td><input type="text" name="email"
                            value="<%= singleObj.email%>"></td>
                </tr>
                <tr>
                    <td>Gender :</td>
                    <td>
                        <input type="radio" name="gender"
                            value="male" <% if( singleObj.gender == 'male'){ %>
                        <%= 'checked' %> <% } %> >Male
                        <input type="radio" name="gender" <% if(
                            singleObj.gender == 'female'){ %>
                        <%= 'checked' %> <% } %>
                        value="female">Female
                    </td>
                </tr>
                <tr>
                    <td>Hobby :</td>
                    <td>
                        <input type="checkbox" name="hobby" <%
                            if(singleObj.hobby.includes('Reading')){ %> <%=
                        'checked' %> <% } %>
                        value="Reading">Reading
                        <input type="checkbox" name="hobby" <%
                            if(singleObj.hobby.includes('Travelling')){ %> <%=
                        'checked' %> <% } %>
                        value="Travelling">Travelling
                        <input type="checkbox" name="hobby" <%
                            if(singleObj.hobby.includes('Movie')){ %> <%=
                        'checked' %> <% } %>
                        value="Movie">Movie
                    </td>
                </tr>
                <% let cityNames = ["Rajkot", "Mumbai", "Surat"]; %>
                <tr>
                    <td>City :</td>
                    <td>
                        <select name="city">
                            <option value>-- Select City --</option>
                            <% cityNames.map((v, i) => { %>
                            <option value="<%= v %>" <% if(singleObj.city == v){
                                %> <%= 'selected' %> <% } %> > <%= v %> </option>
                            <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>About :</td>
                    <td><textarea name="about"><%= singleObj.about %></textarea></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Update"></td>
                </tr>
            </table>
        </form>

        <!-- VIEW DATA -->

        <script src="/js/bootstrap.bundle.min.js"
            type="text/javascript"></script>
    </body>
</html>
