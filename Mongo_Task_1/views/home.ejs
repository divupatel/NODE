<!DOCTYPE html>
<html lang="en">
    <head>

        <title>Home Page</title>
        <link rel="stylesheet" href="/css/style.css" type="text/css" />
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
        <link rel="stylesheet" href="/remix/remixicon.css" type="text/css" />
    </head>
    <body>
        <header class="navbar navbar-expand-lg px-5 py-3 text-light w-100">
            <div>
                <a href="logo" class="nav-link fs-4">My Page</a>
            </div>
            <nav class="navbar-collapse collapse">
                <ul class="navbar-nav m-auto ">
                    <li><a class="nav-link text-light fs-5 mx-4"
                            href>Home</a></li>
                    <li><a class="nav-link text-light fs-5 mx-4"
                            href>View</a></li>
                    <li><a class="nav-link text-light fs-5 mx-4"
                            href>Update</a></li>
                </ul>
            </nav>
            <a href="Javascript:void(0)" class="nav-link fs-4 mx-4"
                id="sidebar"><i
                    class="ri-add-box-fill"></i></a>
        </header>

        <aside id="aside" class="position-fixed start-0 bg-white">
            <h2 style="text-align: center; color: #a29cc8;">Add Data</h2>
            <form action="/insertData" method="post">
                <table border="1" align="center" class="table-responsive">
                    <tr>
                        <td>First Name:</td>
                        <td><input type="text" name="f_name"></td>
                    </tr>
                    <tr>
                        <td>Last Name:</td>
                        <td><input type="text" name="l_name"></td>
                    </tr>
                    <tr>
                        <td>Email :</td>
                        <td><input type="text" name="email"></td>
                    </tr>
                    <tr>
                        <td>Gender :</td>
                        <td>
                            <input type="radio" name="gender"
                                value="male">Male
                            <input type="radio" name="gender"
                                value="female">Female
                        </td>
                    </tr>
                    <tr>
                        <td>Hobby :</td>
                        <td>
                            <input type="checkbox" name="hobby"
                                value="Reading">Reading
                            <input type="checkbox" name="hobby"
                                value="Travelling">Travelling
                            <input type="checkbox" name="hobby"
                                value="Movie">Movie
                        </td>
                    </tr>
                    <% let cityNames = ["Rajkot", "Mumbai", "Surat"]; %>
                    <tr>
                        <td>City :</td>
                        <td>
                            <select name="city">
                                <option value>-- Select City --</option>
                                <% cityNames.map((v, i) => { %>
                                <option value="<%= v %>"><%= v %></option>
                                <% }) %>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>About :</td>
                        <td><textarea name="about"></textarea></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" value="Submit"></td>
                    </tr>
                </table>
            </form>
        </aside>

        <!-- VIEW DATA -->

        <main id="main">
            <table class="table table-hover table-striped table-responsive">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Hobby</th>
                        <th scope="col">City</th>
                        <th scope="col">About</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% userData.map((v, i) => { %>

                    <tr>
                        <td><%= v.f_name %> <%= v.l_name %></td>
                        <td class="text-break"><%= v.email %></td>
                        <td><%= v.gender %></td>
                        <td><%= v.hobby.join(', ') %></td>
                        <td><%= v.city %></td>
                        <td><%= v.about %></td>
                        <td>
                            <a href="/deleteData?id=<%= v._id %>"
                                class="action-link">Delete</a> ||
                            <a href="/editData?id=<%= v._id %>"
                                class="action-link">Edit</a>
                        </td>

                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </main>

        <script src="/js/bootstrap.bundle.min.js"
            type="text/javascript"></script>
        <script src="/js/script.js" type="text/javascript"></script>
    </body>
</html> 
 