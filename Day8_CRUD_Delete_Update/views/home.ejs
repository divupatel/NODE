<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home Page</title>
        
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f9f7fc;
                color: #4b0082; /* Purple for text */
                margin: 0;
                padding: 0;
            }
        
            h1 {
                text-align: center;
                color: #800080; /* Deep purple for the heading */
            }
        
            table {
                border-collapse: collapse;
                width: 90%;
                margin: 20px auto;
                background-color: #e6e6fa; /* Lavender background for tables */
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            }
        
            table th, table td {
                border: 1px solid #800080; /* Deep purple for table borders */
                padding: 10px;
                text-align: left;
            }
        
            table th {
                background-color: #dda0dd; /* Plum for table headers */
                color: white;
            }
        
            table td a {
                color: #800080; /* Deep purple for links */
                text-decoration: none;
            }
        
            table td a:hover {
                text-decoration: underline;
            }
        
            form {
                margin: 20px auto;
                padding: 10px;
                width: 60%;
                background-color: #f3e5f5; /* Purple-tinted form background */
                border-radius: 8px;
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            }
        
            label {
                color: #4b0082; /* Indigo for labels */
            }
        
            input, select, textarea, button {
                width: 100%;
                padding: 8px;
                margin: 5px 0;
                border: 1px solid #800080;
                border-radius: 4px;
                box-sizing: border-box;
            }
        
            button {
                background-color: #800080; /* Purple button background */
                color: white;
                border: none;
                cursor: pointer;
            }
        
            button:hover {
                background-color: #9932cc; /* Amethyst color on hover */
            }
        </style>
        
    </head>
    <body>
        <h1>Student Form</h1>
        <form action="/insertData" method="post">
            <table border="1" align="center">
                <tr>
                    <td><label>First Name:</label></td>
                    <td><input type="text" name="first_name" placeholder="Enter name"></td>
                </tr>
                <tr>
                    <td><label>Last Name:</label></td>
                    <td><input type="text" name="last_name" placeholder="Enter name"></td>
                </tr>
                <tr>
                    <td><label>Email:</label></td>
                    <td><input type="text" name="email" placeholder="Enter email"></td>
                </tr>
                <tr>
                    <td><label>Age:</label></td>
                    <td><input type="number" name="age" placeholder="Enter age"></td>
                </tr>
                <tr>
                    <td><label>Gender:</label></td>
                    <td style="display: flex; align-items: center;">
                        <input type="radio" name="gender" value="Male"> Male
                        <input type="radio" name="gender" value="Female"> Female
                    </td>
                </tr>
                <tr>
                    <td><label>Hobby:</label></td>
                    <td style="display: flex; align-items: center;">
                        <input type="checkbox" name="hobby" value="Reading"> Reading
                        <input type="checkbox" name="hobby" value="Travelling"> Travelling
                        <input type="checkbox" name="hobby" value="Movie"> Movie
                    </td>
                </tr>
                <% var cityName = ['Surat', 'Rajkot', 'Ahmedabad', 'Baroda', 'Mumbai'] %>
                <tr>
                    <td><label>City:</label></td>
                    <td>
                        <select name="city">
                            <option value>-- Select City --</option>
                            <% cityName.map((item) => { %>
                            <option value="<%= item %>"><%= item %></option>
                            <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><label>About:</label></td>
                    <td><textarea name="about" rows="4"></textarea></td>
                </tr>
                <tr>
                    <td></td>
                    <td><button type="submit">Add Student</button></td>
                </tr>
            </table>
        </form>

        <div>
            <table border="1" align="center">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Hobby</th>
                    <th>City</th>
                    <th>About</th>
                    <th>Actions</th>
                </tr>
                <% stData.map((item, i) => { %>
                <tr>
                    <td><%= item.first_name %></td>
                    <td><%= item.last_name %></td>
                    <td><%= item.age %></td>
                    <td><%= item.email %></td>
                    <td><%= item.gender %></td>
                    <td><%= item.hobby %></td>
                    <td><%= item.city %></td>
                    <td><%= item.about %></td>
                    <td>
                        <a href='/deleteData/?pos=<%= i %>'>Delete</a> |
                        <a href='/editData/?pos=<%= i %>'>Update</a>
                    </td>
                </tr>
                <% }) %>
            </table>
        </div>
    </body>
</html>
